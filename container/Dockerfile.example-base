FROM ffreis/base-runner:local

USER root
WORKDIR /app

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      python3.11 \
      python3.11-venv \
      python3-pip \
      ca-certificates && \
    python3.11 -m pip install --no-cache-dir --upgrade pip uv && \
    rm -rf /var/lib/apt/lists/*

COPY --chown=appuser:appgroup --chmod=0444 . /app
RUN find /app -type d -exec chmod 0555 {} + && \
    chmod -R a-w /app

USER appuser
